{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"],
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "noEmit": true,

    /* 厳密なチェック */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,

    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}

